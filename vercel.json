{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/expire-trials",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/trial-reminders",
      "schedule": "5 8 * * *"
    },
    {
      "path": "/api/cron/subscription-check",
      "schedule": "10 8 * * *"
    }
  ]
}
