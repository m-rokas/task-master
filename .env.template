# ============================================
# TaskMaster Environment Variables Template
# ============================================
# Copy this file to .env and .env.local and fill in your values
# NEVER commit .env or .env.local to version control

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public (safe for client-side)
VITE_SUPABASE_URL=https://aseeuadyafuntohgisig.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Private (server-side only - Edge Functions)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# ============================================
# RESEND EMAIL CONFIGURATION
# ============================================
# Get these from: https://resend.com/api-keys

RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_REPLY_TO_EMAIL=support@yourdomain.com

# ============================================
# STRIPE CONFIGURATION (for future use)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys

# Public (safe for client-side)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Private (server-side only)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_your_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_your_pro_yearly_id
STRIPE_PRICE_BUSINESS_MONTHLY=price_your_business_monthly_id
STRIPE_PRICE_BUSINESS_YEARLY=price_your_business_yearly_id

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
# Configure in Supabase Dashboard: Authentication > Providers > Google
# Get credentials from: https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# App URL (your frontend)
VITE_APP_URL=http://localhost:5174

# Note: No separate API server needed!
# - Database calls go directly to Supabase via VITE_SUPABASE_URL
# - Auth is handled by Supabase Auth
# - Server-side logic uses Supabase Edge Functions
# - Edge Functions URL: https://aseeuadyafuntohgisig.supabase.co/functions/v1/

# Environment
NODE_ENV=development

# ============================================
# FEATURE FLAGS (optional)
# ============================================

VITE_ENABLE_STRIPE=false
VITE_ENABLE_ANALYTICS=false
VITE_MAINTENANCE_MODE=false
